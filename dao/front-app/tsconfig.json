{
    "include": ["src", "types"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmit": true,
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types"]
    }
}
